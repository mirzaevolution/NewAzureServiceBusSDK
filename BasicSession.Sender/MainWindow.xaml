<Window x:Class="BasicSession.Sender.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BasicSession.Sender"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <TextBox Name="TextBoxMessage" Padding="5" Margin="5" FontSize="19"/>
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="5" HorizontalAlignment="Center">
            <Button Name="ButtonAlphaSession" Content="Alpha Session"
                    Padding="5" Margin="5" Click="ButtonAlphaSessionClick"/>
            <Button Name="ButtonBetaSession" Content="Beta Session"
                    Padding="5" Margin="5" Click="ButtonBetaSessionClick"/>
        </StackPanel>
    </Grid>
</Window>
